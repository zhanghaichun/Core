<script>
		$(function(){
				$("#sign").click(function(){
						$("#myModal").modal();
						$(this).find("span").css('color','#dedede');
				})
				$('.edit').click(function(){
						var key = $(this)
						var type = $(this).parent().siblings('.widget-caption').html();
						var text = $(this).parent().parent().siblings('.widget-body').find('p').html();
						$("#edit .modal-title").html(type);
						$("#edit .modal-body textarea").val(text);
						$("#edit").modal();
						$("#edit .btn-blue").click(function(){
								key.parent().parent().siblings('.widget-body').find('p').html($("#edit .modal-body textarea").val())
								$("#edit").modal('hide');
						})
				})
				$('#name').click(function(){
						var text = $(this).parent().find('span').html();
						$("#edit-name .modal-body input[type='text']").val(text);
						$("#edit-name").modal();
						$("#edit-name .btn-blue").click(function(){
								$('#name').parent().find('span').html($("#edit-name .modal-body input[type='text']").val())
								$("#edit-name").modal('hide');
						})
				})
				$("#order").click(function(){
						window.location.href = '../Order/index'
				})
				$("#confirm").click(function(){
						window.location.href = '../Appoint/index'
				})
				$("#add").click(function(){
						window.location.href = '../Add/index'
				})
				$(".logout").click(function(){
						window.location.href = '../logout'
				})
				$(".designer").click(function(){
						window.location.href = '../Index/designer'
				})
		})
		// If you want to draw your charts with Theme colors you must run initiating charts after that current skin is loaded
</script>



