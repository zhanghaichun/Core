<!-- Main Container -->
<div class="main-container container-fluid">
		<!-- Page Container -->
		<div class="page-container">
				<!-- Page Content -->
				<div class="page-content">
						<!-- Page Body -->
						<div class="page-body bg-white">
								<div class="row head ">
										<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
												<div class="row">
														<div class="col-xs-6 part-left bg-white bordered-bottom-1">
																<div class="databox themeprimary">
																		<div class="databox-text text-left">今日预约订单(数)</div>
																		<span class="databox-number text-right"><%= yorder%></span>

																</div>
														</div>
														<div class="col-xs-6 part-right bordered-bottom-1 bordered-left-1  ">
																<div class="databox themeprimary">
																		<div class="databox-text text-left">今日到店订单(数)</div>
																		<span class="databox-number text-right"><%= dorder%></span>

																</div>
														</div>
														<div class="col-xs-6 part-left">
																<div class="databox themeprimary">
																		<div class="databox-text">今日完成订单(数)</div>
																		<span class="databox-number text-right"><%= worder%></span>
																</div>
														</div>
														<div class="col-xs-6 part-right bordered-left-1">
																<div class="databox themeprimary">
																		<div class="databox-text text-left">本月累计订单(数)</div>
																		<span class="databox-number text-right"><%= border%></span>
																</div>
														</div>
														<div class="cricle"></div>
												</div>
										</div>
								</div>
								<div class="col-xs-12 empty"></div>
								<div class="row item">
										<div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
												<div class="orders-container">
														<ul class="orders-list">
																<li class="order-item">
																		<a href="../Order/unconfirmed">
																				<div class="row">
																						<div class="col-xs-6 item-left">
																								<div class="item-booker padding-left-10">设计师未确认订单</div>
																						</div>
																						<div class="col-xs-4 item-left">
																								<div class="item-booker text-right padding-left-10" style="margin-top: 7px;"><%= porder%></div>
																						</div>
																						<div class="col-xs-2 item-more" href="javascript:void(0)">
																								<i></i>
																						</div>
																				</div>
																		</a>
																</li>
														</ul>
												</div>
										</div>
								</div>
								<div class="col-xs-12 empty"></div>

								<div class="row">
										<div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 ">
												<div class="orders-container bordered-top-1">
														<ul class="orders-list">
																<% for(var i=0; i<adminStylistHomes.length; i++){%>
																<li class="order-item">
																		<div class="row">
																				<div class="col-xs-6 item-left">
																						<div class="item-booker padding-left-10"><%= adminStylistHomes[i].name%></div>
																				</div>
																				<div class="col-xs-6 item-left text-right">
																						<div class="item-booker padding-left-10">今日到店订单:<%= adminStylistHomes[i].dorder%></div>
																				</div>
																		</div>
																</li>
																<%}%>
														</ul>
												</div>

										</div>
								</div>
								<% if(mechanics.length){%>
										<div class="col-xs-12 empty"></div>
										<div class="row">
												<div class="col-lg-3 col-md-3 col-sm-12 col-xs-12" style="overflow:scroll">
														<table class="table table-scrollable">
																<thead>
																		<tr>
																				<th>技师</th>
																				<th>技师编号</th>
																				<th>当月业绩</th>
																				<th>累计业绩</th>
																				<th>所属门店</th>
																		</tr>
																</thead>
																<tbody>
																		<% for(var i=0; i<mechanics.length; i++){%>
																		<tr>
																				<td><%= mechanics[i].name %></td>
																				<td><%= mechanics[i].mecNumb %></td>
																				<td><a href="../Order/month?mtId=<%= mechanics[i].id %>"><%= mechanics[i].mouthAccumulated %></a></td>
																				<td><%= mechanics[i].allAccumulated %></td>
																				<td><%= mechanics[i].studio.names %></td>
																		</tr>
																		<%}%>
																</tbody>
														</table>
												</div>
										</div>
								<%}%>
						</div>
						<!-- /Page Body -->
				</div>
				<!-- /Page Content -->
		</div>
		<!-- /Page Container -->
		<!-- Main Container -->

</div>
<nav class="navbar navbar-default navbar-fixed-bottom bottomSlider ">
